@model IEnumerable<WebGamingSDV.Models.VirtualM>

@{
    ViewData["Title"] = "Index";
}

<h1>Here is your current machine : </h1>
<br/>

@if (!Model.Any()){
<p>
	<a asp-action="Create" class="btn btn-success">Create New VirtualMachine</a>
</p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.publicIp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.login)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.password)
            </th>
            <th> @Html.DisplayNameFor(model => model.name)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.publicIp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.login)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                    <button class="btn btn-primary"><a asp-action="Edit" asp-route-id="@item.name">Edit</a></button>
                    <button class="btn btn-info"><a asp-action="Details" asp-route-id="@item.name">Details</a></button>
                    <button class="btn btn-danger"><a asp-action="Delete" asp-route-id="@item.name">Delete</a></button>
                    <button class="btn btn-warning"><a asp-action="PowerOff" asp-route-id="@item.name">PowerOff</a></button>
                    <button class="btn btn-success"><a asp-action="PowerOn" asp-route-id="@item.name">PowerOn</a></button>
                    <button class="btn btn-secondary"><a asp-action="Connect" asp-route-id="@item.name">Connect</a></button>
            </td>
        </tr>
}
    </tbody>
</table>
